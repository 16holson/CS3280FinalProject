<Window x:Class="CS3280FinalProject.Main.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280FinalProject.Main"
        mc:Ignorable="d"
        Title="wndMain" Height="450" Width="800" WindowStartupLocation="CenterScreen" Style="{StaticResource windowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem x:Name="MenuSearch" Header="Search" Click="MenuSearch_Click"/>
            <MenuItem x:Name="MenuEditItems" Header="Edit Items" Click="MenuEditItems_Click"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Create New Invoice" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="16" Width="200" Height="30" Margin="19,0,0,0"/>
                <Button Content="Edit Existing Invoice" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="16" Margin="257,0,0,0"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Invoice Information" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="20"/>
                <DataGrid x:Name="MainItemDisplay" Grid.Row="1" Margin="15,15,15,15"/>
                <Button x:Name="RemoveItemButton" Grid.Row="2" Content="Remove Item" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" Width="100" Height="30" Margin="29,5,0,0"/>
                <Label x:Name="totalCostLabel" Grid.Row="2" Content="Total Cost: ___" FontFamily="Arial Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,13,0,0" FontSize="14"/>
                <Button x:Name="SaveInvoiceButton" Grid.Row="3" Content="Save Invoice" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="30" FontFamily="Arial Black" FontSize="14"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
