<Window x:Class="CS3280FinalProject.Main.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280FinalProject.Main"
        mc:Ignorable="d"
        Title="wndMain" Height="450" Width="800" WindowStartupLocation="CenterScreen" Style="{StaticResource windowStyle}">
    <Window.Resources>
        <!--DataGrid Style-->
        <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource dataGridStyle}"></Style>
        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource dataGridColumnHeaderStyle}"></Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Menu Items-->
        <Menu Grid.Row="0">
            <MenuItem x:Name="MenuSearch" Header="Search" Click="MenuSearch_Click"/>
            <MenuItem x:Name="MenuEditItems" Header="Edit Items" Click="MenuEditItems_Click"/>
        </Menu>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" HorizontalAlignment="Left" Margin="27,-10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Create Invoice Button-->
                <Button x:Name="CreateInvoiceButton" Content="Create Invoice" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="14" Width="150" Height="30" Margin="19,32,0,0" Click="CreateInvoiceButton_Click"/>

                <!--Edit Invoice Button-->
                <Button x:Name="EditInvoiceButton" Content="Edit Invoice" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="14" Margin="19,96,0,0" Click="EditInvoiceButton_Click"/>

                <!--Label for Invoice Num that is being viewed-->
                <Label x:Name="InvoiceNumLabel" Grid.Row="1" Content="Invoice #:    " FontFamily="Arial Black" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,21,0,0"/>
                
                <!--Label for Invoice Date that is being viewed-->
                <Label x:Name="InvoiceDateLabel" Grid.Row="1" Content="Date: MM/DD/YYYY" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="18" Margin="19,0,0,0"/>
                
                <!--Label for Invoice Total Cost-->
                <Label x:Name="TotalCostLabel" Grid.Row="1" Content="Total Cost: ___" FontFamily="Arial Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,97,0,0" FontSize="18"/>
                
                <!--Label to Designate the CB is for Items-->
                <Label Grid.Row="2" Content="Item: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="25" FontFamily="Arial Black" FontSize="16" Margin="44,28,0,0"/>
                
                <!--Combo Box to select Items from-->
                <ComboBox x:Name="InvoiceItemComboBox" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="188" Height="30" Margin="119,21,0,0"/>
                
                <!--Button to Add an item to current invoice-->
                <Button x:Name="AddItemButton" Content="Add Item" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="100" FontFamily="Arial Black" Margin="19,85,0,0" RenderTransformOrigin="0.557,1.62"/>
                
                <!--Button to Remove an item from current invoice-->
                <Button x:Name="RemoveItemButton" Grid.Row="2" Content="Remove Item" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" Width="100" Height="30" Margin="181,85,0,0"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" Margin="456,0,24,0">

                <Label Grid.Row="0" Content="Invoice Information" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="20" Margin="34,35,0,0"/>
                
                <!--DataGrid to Display Items in Invoice-->
                <DataGrid x:Name="MainItemDisplay" Margin="15,74,0,132">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Line Number" Binding="{Binding lineItemNum}"/>
                        <DataGridTextColumn Header="Item Code" Binding="{Binding invoiceNum}"/>
                        <DataGridTextColumn Header="Item Description" Binding="{Binding invoiceDate}"/>
                        <DataGridTextColumn Header="Item Cost" Binding="{Binding totalCost}"/>
                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Grid Style="{StaticResource insideGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <DataGrid Grid.Column="1" ItemsSource="{Binding items}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Item Code" Binding="{Binding Path=itemCode}"/>
                                        <DataGridTextColumn Header="Item Description" Binding="{Binding Path=itemDesc}"/>
                                        <DataGridTextColumn Header="Item Cost" Binding="{Binding Path=itemCost}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                    
                </DataGrid>
                <Button x:Name="SaveInvoiceButton" Content="Save Invoice" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="30" FontFamily="Arial Black" Margin="66,329,0,0" FontSize="14" Click="SaveInvoiceButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
